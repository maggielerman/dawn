{% doc %}
  @prompt
    Create a section that references the collection.by_artist metafield (not custom.by_artist). The section should properly access and display the by_artist metafield from the collection object.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-artist-info-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-artist-info-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-artist-info-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    margin-bottom: 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-artist-info-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.value_size }}px;
    color: {{ block.settings.value_color }};
    line-height: 1.5;
  }

  .ai-artist-info-empty-{{ ai_gen_id }} {
    font-size: 14px;
    color: #999;
    font-style: italic;
    padding: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-artist-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-artist-info-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.9 }}px;
    }

    .ai-artist-info-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.value_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<artist-info-{{ ai_gen_id }}
  class="ai-artist-info-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-artist-info-container-{{ ai_gen_id }}">
    {% if collection.by_artist != blank %}
      {% if block.settings.show_label %}
        <div class="ai-artist-info-label-{{ ai_gen_id }}">
          {{ block.settings.label_text }}
        </div>
      {% endif %}
      <div class="ai-artist-info-value-{{ ai_gen_id }}">
        {{ collection.by_artist }}
      </div>
    {% else %}
      <div class="ai-artist-info-empty-{{ ai_gen_id }}">
        No artist information available for this collection
      </div>
    {% endif %}
  </div>
</artist-info-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Collection artist info",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "show_label",
      "label": "Show label",
      "default": true
    },
    {
      "type": "text",
      "id": "label_text",
      "label": "Label text",
      "default": "Artist"
