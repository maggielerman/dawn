{% doc %}
  @prompt
    Create a section that displays all collections where the metafield 'custom.by_artist' is set to true. The section should loop through all collections, filter for those with by_artist = true, and display them in a responsive grid with collection images, titles, and descriptions. Include a heading "Collections by Artist" and style it with a clean, modern grid layout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-artist-collections-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-artist-collections-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-artist-collections-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-artist-collections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-artist-collections-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background_color }};
    transition: transform 0.3s ease;
  }

  .ai-artist-collections-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-artist-collections-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-artist-collections-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-artist-collections-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-artist-collections-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-artist-collections-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-artist-collections-title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: 600;
  }

  .ai-artist-collections-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-artist-collections-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-artist-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-artist-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-artist-collections-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }
{% endstyle %}

<artist-collections-{{ ai_gen_id }} class="ai-artist-collections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-artist-collections-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-artist-collections-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% assign artist_collections = collections | where: 'metafields.custom.by_artist', true %}

    {% if artist_collections.size > 0 %}
      <ul class="ai-artist-collections-grid-{{ ai_gen_id }}">
        {% for collection in artist_collections %}
          <li class="ai-artist-collections-item-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-artist-collections-link-{{ ai_gen_id }}">
              <div class="ai-artist-collections-image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    class="ai-artist-collections-image-{{ ai_gen_id }}"
                  >
                {% else %}
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                {% endif %}
              </div>

              <div class="ai-artist-collections-content-{{ ai_gen_id }}">
                {% if block.settings.show_title %}
                  <h3 class="ai-artist-collections-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                {% endif %}

                {% if block.settings.show_description and collection.description != blank %}
                  <div class="ai-artist-collections-description-{{ ai_gen_id }}">
                    {{ collection.description | strip_html | truncate: block.settings.description_length }}
                  </div>
                {% endif %}
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="ai-artist-collections-empty-{{ ai_gen_id }}">
        No collections with "by_artist" metafield found. Add the custom.by_artist metafield to collections to display them here.
      </div>
    {% endif %}
  </div>
</artist-collections-{{ ai_gen_id }}>

