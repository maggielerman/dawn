{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-main-article-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.main_image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;}

  .ai-editorial-main-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.main_image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-main-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;}

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  .ai-editorial-main-content-{{ ai_gen_id }} {
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.category_bg_color }};
    color: {{ block.settings.category_text_color }};
    padding:6px 12px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 4px;
    margin-bottom: 12px;
  }

  .ai-editorial-main-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px 0;
  }

  .ai-editorial-main-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 20px;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-author-{{ ai_gen_id }} {
    font-weight: 500;
  }

  .ai-editorial-date-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-date-{{ ai_gen_id }}::before {
    content: "•";
    position: absolute;
    left: -10px;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-sidebar-article-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    padding-bottom: {{ block.settings.content_spacing }}px;
    border-bottom: 1px solid {{ block.settings.text_color | color_modify: 'alpha', 0.1 }};
  }

  .ai-editorial-sidebar-article-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .ai-editorial-sidebar-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    flex-shrink: 0;object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-sidebar-image-placeholder-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-sidebar-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-sidebar-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-editorial-sidebar-category-{{ ai_gen_id }} {
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: {{ block.settings.category_bg_color }};
    margin-bottom: 6px;
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.sidebar_title_size }}px;
    font-weight: 600;
    line-height: 1.3;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-editorial-sidebar-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    padding: 12px 24px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-editorial-read-more-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-editorial-read-more-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;gap: {{ block.settings.content_spacing }}px;
    }

    .ai-editorial-main-image-{{ ai_gen_id }},
    .ai-editorial-main-image-placeholder-{{ ai_gen_id }} {
      height: 250px;
    }

    .ai-editorial-main-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_title_size | times: 0.8 }}px;
    }

    .ai-editorial-sidebar-article-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-editorial-sidebar-image-{{ ai_gen_id }},
    .ai-editorial-sidebar-image-placeholder-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
    }
  }
{% endstyle %}<editorial-layout-{{ ai_gen_id }}
  class="ai-editorial-layout-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <article class="ai-editorial-main-article-{{ ai_gen_id }}">
      {% if block.settings.main_image %}
        <img
          src="{{ block.settings.main_image | image_url: width: 800 }}"
          alt="{{ block.settings.main_image.alt | escape }}"
          class="ai-editorial-main-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.main_image.width }}"
          height="{{ block.settings.main_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-main-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-editorial-empty-state-{{ ai_gen_id }}">
            Add a featured image
          </div>
        </div>
      {% endif %}

      <div class="ai-editorial-main-content-{{ ai_gen_id }}">
        {% if block.settings.main_category != blank %}
          <span class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.main_category }}</span>
        {% endif %}

        <h1 class="ai-editorial-main-title-{{ ai_gen_id }}">
          {% if block.settings.main_link != blank %}
            <a href="{{ block.settings.main_link }}" style="color: inherit; text-decoration: none;">
              {{ block.settings.main_title }}
            </a>
          {% else %}
            {{ block.settings.main_title }}
          {% endif %}
        </h1>

        {% if block.settings.main_excerpt != blank %}
          <div class="ai-editorial-main-excerpt-{{ ai_gen_id }}">
            {{ block.settings.main_excerpt }}
          </div>
        {% endif %}<div class="ai-editorial-meta-{{ ai_gen_id }}">
          {% if block.settings.main_author != blank %}
            <span class="ai-editorial-author-{{ ai_gen_id }}">{{ block.settings.main_author }}</span>
          {% endif %}
          {% if block.settings.main_date != blank %}
            <span class="ai-editorial-date-{{ ai_gen_id }}">{{ block.settings.main_date }}</span>
          {% endif %}
        </div>

        {% if block.settings.main_link != blank and block.settings.show_read_more %}
          <div style="margin-top: 24px;">
            <a href="{{ block.settings.main_link }}" class="ai-editorial-read-more-{{ ai_gen_id }}">
              {{ block.settings.read_more_text }}
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    </article><aside class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'sidebar_image_' | append: i
          assign title_key = 'sidebar_title_' | append: i
          assign category_key = 'sidebar_category_' | append: i
          assign author_key = 'sidebar_author_' | append: i
          assign date_key = 'sidebar_date_' | append: i
          assign link_key = 'sidebar_link_' | append: i

          assign sidebar_image = block.settings[image_key]
          assign sidebar_title = block.settings[title_key]
          assign sidebar_category = block.settings[category_key]
          assign sidebar_author = block.settings[author_key]
          assign sidebar_date = block.settings[date_key]
          assign sidebar_link = block.settings[link_key]
        %}

        {% if sidebar_title != blank %}
          <article class="ai-editorial-sidebar-article-{{ ai_gen_id }}">
            {% if sidebar_image %}
              <img
                src="{{ sidebar_image | image_url: width: 160 }}"
                alt="{{ sidebar_image.alt | escape }}"
                class="ai-editorial-sidebar-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ sidebar_image.width }}"
                height="{{ sidebar_image.height }}"
              >
            {% else %}
              <div class="ai-editorial-sidebar-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-editorial-sidebar-content-{{ ai_gen_id }}">
              {% if sidebar_category != blank %}
                <div class="ai-editorial-sidebar-category-{{ ai_gen_id }}">{{ sidebar_category }}</div>
              {% endif %}

              <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">
                {% if sidebar_link != blank %}
                  <a href="{{ sidebar_link }}" style="color: inherit; text-decoration: none;">
                    {{ sidebar_title }}
                  </a>
                {% else %}
                  {{ sidebar_title }}
                {% endif %}
              </h3>

              <div class="ai-editorial-sidebar-meta-{{ ai_gen_id }}">
                {% if sidebar_author != blank %}
                  {{ sidebar_author }}
                {% endif %}
                {% if sidebar_author != blank and sidebar_date != blank %}
                  •
                {% endif %}
                {% if sidebar_date != blank %}
                  {{ sidebar_date }}
                {% endif %}
              </div>
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </aside>
  </div>
</editorial-layout-{{ ai_gen_id }}><script>
  (function() {
    class EditorialLayout{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const links = this.querySelectorAll('a');
        links.forEach(link => {
          if (link.getAttribute('href') === '#') {
            link.setAttribute('aria-disabled', 'true');
            link.addEventListener('click', (e) => e.preventDefault());
          }
        });
      }
    }

    customElements.define('editorial-layout-{{ ai_gen_id }}', EditorialLayout{{ ai_gen_id }});
  })();
</script>

